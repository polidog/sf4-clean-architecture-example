{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h2 class="page-header">口座情報</h2>
        <table class="table table-bordered">
            <tr>
                <th>口座番号</th>
                <td>{{ account.number }}</td>
            </tr>
            <tr>
                <th>名前</th>
                <td>{{ account.name }}</td>
            </tr>


            <tr>
                <th>金額</th>
                <td>{{ account.money|number_format }}円</td>
            </tr>
        </table>
    </div>
{% endblock %}